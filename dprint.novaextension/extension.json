{
  "identifier": "chriskrycho.dprint",
  "name": "dprint",
  "organization": "Chris Krycho",
  "description": "dprint integration for Nova",
  "version": "1.0",
  "categories": ["formatters", "issues"],
  "entitlements": {
    "filesystem": "readonly",
    "process": true
  },
  "main": "main.js",
  "activationEvents": [
    "onWorkspaceContains:dprint.json",
    "onWorkspaceContains:.dprint.json",
    "onWorkspaceContains:dprint.jsonc",
    "onWorkspaceContains:.dprint.jsonc"
  ],
  "commands": {
    "editor": [
      {
        "title": "Format",
        "command": "dprint.format",
        "shortcut": "cmd-opt-shift-f"
      },
      {
        "title": "Format selection",
        "command": "dprint.format-selection"
      },
      {
        "title": "Save without formatting",
        "command": "dprint.save-without-formatting",
        "shortcut": "cmd-opt-shift-s"
      }
    ]
  },
  "config": "./config.json",
  "configWorkspace": "./config.json"
}
